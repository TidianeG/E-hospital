<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedecinActivity"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/containerconsult">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:src="@mipmap/ic_launcher_foreground"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_middle"
                >

            </ImageView>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerMain"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/pediatrie"
                >

            </androidx.viewpager.widget.ViewPager>
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dim_top"
                android:textSize="@dimen/dim_title"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/consultation_management">

            </TextView>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_margin="@dimen/dim_all">
                <ImageButton
                    android:id="@+id/new_consultation"
                    android:layout_height="120dp"
                    android:layout_width="120dp"
                    android:background="@drawable/logo1"
                    >

                </ImageButton>
                <ImageButton
                    android:id="@+id/list_consultation"
                    android:layout_height="120dp"
                    android:layout_width="120dp"
                    android:background="@drawable/list_24"
                    android:layout_marginLeft="90dp">
                </ImageButton>
            </GridLayout>
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dim_top"
                android:textSize="@dimen/dim_title"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/appoint_account">

            </TextView>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_margin="@dimen/dim_all">
                <ImageButton
                    android:layout_height="120dp"
                    android:layout_width="120dp"

                    android:background="@drawable/cal_24"

                    >

                </ImageButton>
                <ImageButton
                    android:layout_height="120dp"
                    android:layout_width="120dp"
                    android:background="@drawable/ic_baseline_account_circle_24"
                    android:layout_marginLeft="90dp">

                </ImageButton>
            </GridLayout>
        </LinearLayout>
    </FrameLayout>

</ScrollView>